    String DB_url = "jdbc:sqlserver://localhost:1433;databaseName=PolyApp;user=sa;password=123456";

    public void loadDataToTable() {
        Connection conn = null;//khai báo biến
        Statement stmt = null;
        ResultSet rs = null;
        try {
            conn = DriverManager.getConnection(DB_url);//đưa câu lệnh sql vào
            String sql = "select *from SinhVien";
            stmt = conn.createStatement();
            rs = stmt.executeQuery(sql);
            Vector sv = null;
            tblsinhvien.setRowCount(0);
            if (rs.isBeforeFirst() == false) {
                JOptionPane.showMessageDialog(this, "Chưa có sinh viên");
                return;
            }
            while (rs.next()) {
                sv = new Vector();
                sv.add(rs.getString("MaSinhVien"));
                sv.add(rs.getString("HoTen"));
                sv.add(rs.getString("Email"));
                sv.add(rs.getString("SoDT"));
                sv.add(rs.getString("GioiTinh"));
                sv.add(rs.getString("DiaChi"));
                sv.add(rs.getString("Hinh"));
                tblsinhvien.addRow(sv);

            }
            lblqlsv.setModel(tblsinhvien);
            conn.close();
            stmt.close();
            rs.close();

        } catch (Exception e) {
            System.out.println("Lỗi" + e.toString());

        }

    }

