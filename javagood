public boolean checkNull() {
        if (txtmasv.getText().length() == 0){
            JOptionPane.showMessageDialog(null, "Mã không được trống"); 
            return true;
        }else if (txtname.getText().length() == 0) {
            JOptionPane.showMessageDialog(null, "Tên không được trống!"); 
            return true;
        } else if (txtemail.getText().length() == 0) {
            JOptionPane.showMessageDialog(null, "Email không được trống!"); 
            return true;
        } else if (txtsodt.getText().length() == 0) {
            JOptionPane.showMessageDialog(null, "Số điện thoại không được trống!"); 
            return true;
        } else if (txtdiachi.getText().length() == 0) {
            JOptionPane.showMessageDialog(null, "Địa chỉ không được trống!"); 
            return true;
        }
        return false;
 }
         private boolean checkemail() {
        try {
            String mauEmail = "\\w+@\\w+(\\.\\w+){1,2}";
            String email = txtemail.getText();
            if (!email.matches(mauEmail)) {
                JOptionPane.showMessageDialog(this, "Vui lòng nhập đúng định dạng email");
                txtemail.requestFocus();
                return true;
            }
        } catch (Exception e) {

            JOptionPane.showMessageDialog(this, "lỗi check from");
        }
        return false;
    }    
          private boolean checkHoTen() {
        String hoTen;
        try {
            hoTen = txtname.getText();

        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Vui lòng nhập họ tên là chữ");
            txtname.requestFocus();
        }
        return false;
    }
