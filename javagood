    public void Dodulieuvaotext(int row) {
        if (row < 0) {
            return;
        }
        txtmasv.setText(lblqlsv.getValueAt(row, 0).toString());
        txtname.setText(lblqlsv.getValueAt(row, 1).toString());
        txtemail.setText(lblqlsv.getValueAt(row, 2).toString());
        txtsodt.setText(lblqlsv.getValueAt(row, 3).toString());
        int gioitinh=Integer.parseInt(lblqlsv.getValueAt(row, 4).toString());
        if(gioitinh==1)
            rdonam.setSelected(true);
        else
            rdonu.setSelected(true);
        txtdiachi.setText(lblqlsv.getValueAt(row, 5).toString());
    }

