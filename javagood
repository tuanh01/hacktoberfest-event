    private void btnnewActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnnewActionPerformed
      txtmasv.setText("");
        txtname.setText("");
        txtemail.setText("");
        txtsodt.setText("");
        rdonam.setSelected(rootPaneCheckingEnabled);
        txtdiachi.setText("");
        
            
    }//GEN-LAST:event_btnnewActionPerformed

    private void btnsaveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnsaveActionPerformed
      if (checkNull()) {
            return;
        } else if (checkHoTen()) {
            return;
        } else if (checkemail()) {
            return;
        }          
        try {                  
            Connection con=DriverManager.getConnection(DB_url);
            String sql="insert into SinhVien(MaSinhVien,HoTen,Email,SoDT,GioiTinh,DiaChi) values(?,?,?,?,?,?)";
            PreparedStatement stm=con.prepareStatement(sql);
            stm.setString(1, txtmasv.getText().trim());
            stm.setString(2, txtname.getText().trim());
            stm.setString(3, txtemail.getText().trim());
            stm.setString(4, txtsodt.getText().trim());
            String gt="";
            if(rdonam.isSelected())
                gt="1";
            else
                gt="0";
            stm.setString(5, gt);
            stm.setString(6, txtdiachi.getText().trim());            
            stm.executeUpdate();
           stm.close();
           con.close();
           loadDataToTable();
            System.out.println("add thành công");
        } catch (Exception e) {
             System.out.println("Lỗi không add được" + e.toString());
            
        }
    }//GEN-LAST:event_btnsaveActionPerformed

    private void btnupdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnupdateActionPerformed
        try {
             Connection con=DriverManager.getConnection(DB_url);
        String sql ="update SinhVien set HoTen=?,Email=?,SoDT=?,DiaChi=? where MaSinhVien=?";
        PreparedStatement stm=con.prepareStatement(sql);      
        stm.setString(1,txtname.getText().trim());
        stm.setString(2,txtemail.getText().trim());
        stm.setString(3,txtsodt.getText().trim());     
        stm.setString(4,txtdiachi.getText().trim());  
        stm.setString(5,txtmasv.getText().trim());
        stm.executeUpdate();
        stm.close();
        con.close();
        loadDataToTable();
        Dodulieuvaotext(0);
            System.out.println("update thành công");
       
        } catch (Exception e) {
            System.out.println("update không thành công" + e.toString());
        }
        
    }//GEN-LAST:event_btnupdateActionPerformed

    private void btndeleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btndeleteActionPerformed
        // TODO add your handling code here:
        try {
            Connection con=DriverManager.getConnection(DB_url);
            String sql="delete from SinhVien where MaSinhVien=?";
            PreparedStatement stm=null;
            stm=con.prepareStatement(sql);
               stm.setString(1, txtmasv.getText().trim());
            stm.execute();
            JOptionPane.showMessageDialog(this,"xóa dữ liệu thành công");
           loadDataToTable();
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this,"Xóa dữ liệu không thành công");
        }      
